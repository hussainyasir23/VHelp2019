<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="25dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Welcome to V-HELP 2019"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/principal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:onClick="principal"
            android:text="Principal"
            android:textSize="16dp" />

        <Button
            android:id="@+id/departments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Departments"
            android:textSize="16dp" />

        <Button
            android:id="@+id/library"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Library"
            android:textSize="16dp" />

        <Button
            android:id="@+id/transport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Transport"
            android:textSize="16dp" />

        <Button
            android:id="@+id/placementcell"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Placement Cell"
            android:textSize="16dp" />

        <Button
            android:id="@+id/hostel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hostel"
            android:textSize="16dp" />

        <Button
            android:id="@+id/wellnesscenter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wellness Center"
            android:textSize="16dp" />

        <Button
            android:id="@+id/clubs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Clubs"
            android:textSize="16dp" />

        <Button
            android:id="@+id/adminandaccounts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Admin And Accounts"
            android:textSize="16dp" />

        <Button
            android:id="@+id/contactus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contact Us"
            android:textSize="16dp" />
    </LinearLayout>
</ScrollView>