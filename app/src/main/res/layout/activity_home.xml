<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/welcome_to_v_help_2019"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="30sp" />

        <Button
            android:id="@+id/principal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/principal" />

        <Button
            android:id="@+id/departments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/departments" />

        <Button
            android:id="@+id/library"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/library" />

        <Button
            android:id="@+id/transport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/transport" />

        <Button
            android:id="@+id/placementcell"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/placement_cell" />

        <Button
            android:id="@+id/hostel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/hostel" />

        <Button
            android:id="@+id/wellnesscenter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/wellness_center" />

        <Button
            android:id="@+id/clubs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/clubs" />

        <Button
            android:id="@+id/adminandaccounts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/admin_and_accounts" />

        <Button
            android:id="@+id/contactus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/contact_us" />
    </LinearLayout>
</ScrollView>